@page "/Admin/MenuAdmin"

<MudMenuAdmin>
   <MudNavLink Href="/Admin/Index" Match="NavLinkMatch.All">
    <MudIcon Icon="@Icons.Material.Filled.Home" IconColor="Color.Warning" />
    Início
</MudNavLink>

   <MudNavGroup
    Icon="@Icons.Material.Filled.Dashboard"
    IconColor="Color.Error"
    Title="Painel Administrativo"
    Expanded="true">

    <MudNavLink
        Href="/Admin/GerenciarReservas"
        Match="NavLinkMatch.Prefix"
        Icon="@Icons.Material.Filled.Book"
        IconColor="Color.Default">
        Gerenciar reservas
    </MudNavLink>

    <MudNavLink
        Href="/"
        Match="NavLinkMatch.Prefix"
        Icon="@Icons.Material.Filled.Settings"
        IconColor="Color.Default">
        Configuração de hotel
    </MudNavLink>

    <MudNavGroup
        Icon="@Icons.Material.Filled.People"
        IconColor="Color.Success"
        Title="Usuários"
        Expanded="true">
        
        <MudNavLink
            Href="/"
            Match="NavLinkMatch.Prefix"
            Icon="@Icons.Material.Filled.Person"
            IconColor="Color.Primary">
            Recepcionista
        </MudNavLink>

        <MudNavLink
            Href="/"
            Match="NavLinkMatch.Prefix"
            Icon="@Icons.Material.Filled.Person"
            IconColor="Color.Primary">
            Gerente de Hotel
        </MudNavLink>

        <MudNavLink
            Href="/"
            Match="NavLinkMatch.Prefix"
            Icon="@Icons.Material.Filled.Person"
            IconColor="Color.Primary">
            Provedor de Serviços Externos
        </MudNavLink>

        <MudNavLink
            Href="/"
            Match="NavLinkMatch.Prefix"
            Icon="@Icons.Material.Filled.Person"
            IconColor="Color.Primary">
            Marketer (Equipe de marketing)
        </MudNavLink>

        <MudNavLink
            Href="/"
            Match="NavLinkMatch.Prefix"
            Icon="@Icons.Material.Filled.Business"
            IconColor="Color.Primary">
            Proprietário do Hotel
        </MudNavLink>

        <MudNavLink
            T="bool"
            Href="/"
            Match="NavLinkMatch.Prefix"
            Icon="@Icons.Material.Filled.PersonOutline"
            IconColor="Color.Primary">
            Hóspede
        </MudNavLink>
    </MudNavGroup>

    <MudNavLink
        T="bool"
        Href="/"
        Match="NavLinkMatch.Prefix"
        Icon="@Icons.Material.Filled.Assessment"
        IconColor="Color.Success">
        Relatórios
    </MudNavLink>

    <MudNavLink
        T="bool"
        Href="/"
        Match="NavLinkMatch.Prefix"
        Icon="@Icons.Material.Filled.LocalOffer"
        IconColor="Color.Warning">
        Gerenciar promoções e descontos
    </MudNavLink>
</MudNavGroup>

   <MudNavLink
    T="bool"
    Href="/Admin/Seguranca"
    Match="NavLinkMatch.Prefix"
    Icon="@Icons.Material.Filled.Lock"
    IconColor = "Color.Default">Segurança
</MudNavLink>

   <MudNavLink
    Href="/Admin/Chat"
    Match="NavLinkMatch.Prefix"
    Icon="@Icons.Material.Filled.Chat"
    IconColor="Color.Success" >
    Chat
</MudNavLink>

   <MudNavLink
    Href="/Admin/Sobre"
    Match="NavLinkMatch.Prefix"
    Icon="@Icons.Material.Filled.Info"
    IconColor="Color.Info">
    Sobre
</MudNavLink>
</MudMenuAdmin>
