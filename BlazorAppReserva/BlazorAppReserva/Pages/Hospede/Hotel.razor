            Descrição = "Acomodações luxuosas no centro da cidade.",
            Preço = "R$ 450,00/noite",
            Imagem = "https://via.placeholder.com/300",
        }
    };

    // Método para navegar para os detalhes do hotel
    private void NavegarDetalhes(Hotel hotel)
    {
        // Você pode implementar a navegação para outra página aqui, por exemplo:
        // NavigationManager.NavigateTo($"/detalhes/{hotel.Nome}");
        Console.WriteLine($"Navegando para os detalhes do hotel: {hotel.Nome}");
