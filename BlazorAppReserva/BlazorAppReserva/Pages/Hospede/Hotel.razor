@page "/Hotel"

<MudGrid>
    @foreach (var hotel in hotéis)
    {
        <MudItem xs="12" sm="6" md="4">
            <MudCard>
                <MudCardMedia Image="@hotel.Imagem" Title="@hotel.Nome" />
                <MudCardContent>
                    <MudText Typo="Typo.h6">@hotel.Nome</MudText>
                    <MudText>@hotel.Descrição</MudText>
                    <MudText><strong>Preço:</strong> @hotel.Preço</MudText>
                    <MudButton OnClick="@(() => NavegarDetalhes(hotel))">Ver Detalhes</MudButton>
                </MudCardContent>
            </MudCard>
        </MudItem>
    }
</MudGrid>

@code {
    // Lista de hotéis (dados fictícios)
    private List<Hotel> hotéis = new List<Hotel>
    {
        new Hotel
        {
            Nome = "Hotel Praia Azul",
            Descrição = "Localizado na praia com vista deslumbrante.",
            Preço = "R$ 250,00/noite",
