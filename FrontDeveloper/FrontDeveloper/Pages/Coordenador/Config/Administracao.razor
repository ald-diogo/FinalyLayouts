@page "/Coor/Administracao"

@using MudBlazor

<PageTitle>Funções Administrativas</PageTitle>

<MudContainer>
    <!-- Título da Página -->
    <MudText Typo="Typo.h4" Align="Align.Center">Funções Administrativas</MudText>

    <MudGrid>
        <!-- Acompanhar Processos Administrativos -->
        <MudItem xs="12" sm="6" md="3">
            <MudCard>
                <MudCardContent>
                    <MudText Typo="Typo.h6">Acompanhar Processos Administrativos</MudText>
                    <MudIconButton Icon="@Icons.Material.Filled.Assignment" Color="Color.Primary" Size="Size.Large" />
                    <MudText>Monitore os processos administrativos em andamento.</MudText>
                    <MudButton Variant="Variant.Filled" Color="Color.Secondary" Class="mt-2">Ver Processos</MudButton>
                </MudCardContent>
            </MudCard>
        </MudItem>

        <!-- Coordenar Matrícula de Alunos -->
        <MudItem xs="12" sm="6" md="3">
            <MudCard>
                <MudCardContent>
                    <MudText Typo="Typo.h6">Coordenar Matrícula de Alunos</MudText>
                    <MudIconButton 
                        Icon="@Icons.Material.Filled.SupervisorAccount" 
                        Color="Color.Primary" 
                        Size="Size.Large" />
                    <MudText>Gerencie as matrículas dos alunos de forma rápida.</MudText>
                    <MudButton
                        Variant="Variant.Filled"
                        Color="Color.Secondary"
                        Class="mt-2">
                        Ver Matrículas
                    </MudButton>
                </MudCardContent>
            </MudCard>
        </MudItem>

        <!-- Controlar Documentos Acadêmicos -->
        <MudItem xs="12" sm="6" md="3">
            <MudCard>
                <MudCardContent>
                    <MudText Typo="Typo.h6">Controlar Documentos Acadêmicos</MudText>
                    <MudIconButton 
                        Icon="@Icons.Material.Filled.InsertDriveFile"
                        Color="Color.Primary"
                        Size="Size.Large" />
                    <MudText>Gerencie documentos acadêmicos com facilidade.</MudText>
                    <MudButton
                        Variant="Variant.Filled"
                        Color="Color.Secondary"
                        Class="mt-2">
                        Ver Documentos
                    </MudButton>
                </MudCardContent>
            </MudCard>
        </MudItem>

        <!-- Supervisão de Relatórios Financeiros -->
        <MudItem xs="12" sm="6" md="3">
            <MudCard>
                <MudCardContent>
                    <MudText Typo="Typo.h6">Supervisão de Relatórios Financeiros</MudText>
                    <MudIconButton Icon="@Icons.Material.Filled.Assessment" Color="Color.Primary" Size="Size.Large" />
                    <MudText>Acompanhe e analise os relatórios financeiros.</MudText>
                    <MudButton Variant="Variant.Filled" Color="Color.Secondary" Class="mt-2">Ver Relatórios</MudButton>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudContainer>

