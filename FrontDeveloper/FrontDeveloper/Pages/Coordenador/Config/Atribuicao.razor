@page "/Coor/Atribuicao"

@using MudBlazor

<PageTitle>Atribuição de Professores às Disciplinas</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large">
    <!-- Cabeçalho da Página -->
    <MudPaper Elevation="4" Class="mb-4 pa-4">
        <MudText Typo="Typo.h4" Align="Align.Center" Class="text-primary">
            Atribuição de Professores às Disciplinas
        </MudText>
    </MudPaper>

    <!-- Filtros para visualização de professores disponíveis -->
    <MudGrid>
        <MudItem xs="12" sm="6">
            <MudTextField 
                T="string" 
                Label="Filtrar Professores" 
                Variant="Variant.Outlined" 
                Icon="@Icons.Material.Filled.Search" 
                FullWidth />
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudSelect T="string" Label="Filtrar por Área" Variant="Variant.Outlined" Icon="@Icons.Material.Filled.FilterAlt" FullWidth>
                <MudSelectItem Value="Matemática">Matemática</MudSelectItem>
                <MudSelectItem Value="Física">Física</MudSelectItem>
                <MudSelectItem Value="Química">Química</MudSelectItem>
                <MudSelectItem Value="Biologia">Biologia</MudSelectItem>
            </MudSelect>
        </MudItem>
    </MudGrid>

    <!-- Tabela de Professores Disponíveis -->
    <MudPaper Elevation="4" Class="mb-4 pa-4">
        <MudText Typo="Typo.h6" Class="mb-2">Professores Disponíveis</MudText>
        <MudTable T="string" Elevation="1">
            <MudTableHead>
                <MudTableRow>
                    <MudTableCell>Nome</MudTableCell>
                    <MudTableCell>Especialidade</MudTableCell>
                    <MudTableCell>Disponibilidade</MudTableCell>
                    <MudTableCell>Ação</MudTableCell>
                </MudTableRow>
            </MudTableHead>
            <MudTableBody>
                @foreach (var professor in professoresDisponiveis)
                {
                    <MudTableRow>
                        <MudTableCell>@professor.Nome</MudTableCell>
                        <MudTableCell>@professor.Especialidade</MudTableCell>
                        <MudTableCell>@professor.Disponibilidade</MudTableCell>
                        <MudTableCell>
                            <MudIconButton Icon="@Icons.Material.Filled.Add" Color="Color.Primary" OnClick="@(() => AtribuirProfessor(professor))" />
                        </MudTableCell>
                    </MudTableRow>
                }
            </MudTableBody>
        </MudTable>
    </MudPaper>

    <!-- Seção para Atribuição de Professores às Disciplinas -->
    <MudPaper Elevation="4" Class="mb-4 pa-4">
        <MudText Typo="Typo.h6" Class="mb-2">Atribuir Professores às Disciplinas</MudText>
        <MudGrid>
            @foreach (var disciplina in disciplinas)
            {
                <MudItem xs="12" sm="4">
                    <MudCard Elevation="3" Class="mb-3">
                        <MudCardContent>
                            <MudText Typo="Typo.h6" Class="text-center">@disciplina.Nome</MudText>
                            <MudText Typo="Typo.body2" Class="text-center">@disciplina.Descrição</MudText>
                            <MudButton FullWidth Color="Color.Primary" OnClick="@(() => AtribuirProfessorPorDisciplina(disciplina))">
                                Atribuir Professor
                            </MudButton>
                        </MudCardContent>
                    </MudCard>
                </MudItem>
            }
        </MudGrid>
    </MudPaper>

    <!-- Ajuste de Alocação -->
    <MudPaper Elevation="4" Class="mb-4 pa-4">
        <MudText Typo="Typo.h6" Class="mb-2">Ajustar Alocação Conforme Demanda</MudText>
        <MudGrid>
            <MudItem xs="12">
                <MudButton
                    FullWidth Color="Color.Secondary"
                    OnClick="AjustarAlocacao">
                    Ajustar Alocação
                </MudButton>
            </MudItem>
        </MudGrid>
    </MudPaper>

    <!-- Resumo de Atribuições -->
    <MudPaper Elevation="4" Class="mb-4 pa-4">
        <MudText Typo="Typo.h6" Class="mb-2">Resumo das Atribuições</MudText>
        <MudTable T="string" Elevation="1">
            <MudTableHead>
                <MudTableRow>
                    <MudTableCell>Disciplina</MudTableCell>
                    <MudTableCell>Professor</MudTableCell>
                    <MudTableCell>Carga Horária</MudTableCell>
                </MudTableRow>
            </MudTableHead>
            <MudTableBody>
               
            </MudTableBody>
        </MudTable>
    </MudPaper>

</MudContainer>

